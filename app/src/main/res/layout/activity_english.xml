<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".english">

    <TextView
        android:id="@+id/alphabetTv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Alphabet"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:onClick="alphabetEnglish"
        android:background="@drawable/border_style"
        />

    <TextView
        android:id="@+id/numberTv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Number"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/border_style"
        android:onClick="numberEnglish"
        />
    <TextView
        android:id="@+id/poemsTV"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Poems"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:onClick="poems"
        android:background="@drawable/border_style"
        />
    <!--<TextView
        android:id="@+id/wordmakingTv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Word Making"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/border_style"
        />-->
    <TextView
        android:id="@+id/writtenWordTv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Learn to write letters"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:onClick="writeLetters"
        android:textAlignment="center"
        android:background="@drawable/border_style"
        />
</LinearLayout>